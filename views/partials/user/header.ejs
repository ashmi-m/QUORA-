<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
<link rel="stylesheet" href="../css/header.css">
<style>
  .dropdown {
    position: relative;
    display: flex;
    justify-content: flex-end;
  }

  .dropdown-content {
    display: none;
    position: absolute;
    background-color: white;
    min-width: 160px;
    box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
    z-index: 1000;
    right: 0;
    border-radius: 5px;

  }

  .dropdown-content a {
    color: black;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
    width: 100%;

  }

  .dropdown-content a:hover {
    background-color: #f1f1f1;
  }

  .dropdown:hover .dropdown-content {
    display: block;
  }

  .header {
    position: relative;
    z-index: 500;
  }


  .right-section {
    display: flex;
    align-items: center;
    gap: 15px;
  }


  .nav-links {
    display: flex;
    gap: 20px;
  }

  navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 20px;
    background: white;
  }

  .sign-in-link {
    text-decoration: none;
  }
</style>



<header>
  <div class="navbar">

    <div class="left-section">
      <h1 class="logo">QUORA</h1>
    </div>


    <nav class="nav-links">
      <a href="/">HOME</a>
      <a href="/about">ABOUT</a>
      <a href="/shop">SHOP</a>
    </nav>

    <div class="right-section">

       <a href="/wishlist" class="header-icon">
    <i class="fa fa-heart"></i>
    <% if (typeof wishlistCount !== "undefined" && wishlistCount > 0) { %>
      <small class="badge"><%= wishlistCount %></small>
    <% } %>
  </a>

    <a href="/cart" class="header-icon">
    <i class="fa fa-shopping-cart"></i>
    <% if (typeof cartCount !== "undefined" && cartCount > 0) { %>
      <small class="badge"><%= cartCount %></small>
    <% } %>
  </a>


        <% if (user ||locals.user) { %>
          <div class="dropdown">
            <a href="#" class="sign-in-link text-dark">
              <%= user.name || "Username" %>
            </a>

            <div class="dropdown-content">
              <a href="/userprofile">Profile</a>
              <a href="/logout">Logout</a>
            </div>
          </div>
          <% } else { %>
            <a href="/signup" class="sign-in-link text-dark">Sign Up</a>
            <a href="/login" class="sign-in-link text-dark ">Login</a>
            <% } %>
      </div>
    </div>


</header>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
