<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Login | QUORA</title>
  <link rel="stylesheet" href="/css/style.css" />
     <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
  />
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: #f9f9f9;
      margin: 0;
      padding: 0;
    }

    .login-container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background: #fff;
    }

    .login-box {
      display: flex;
      background: white;
      border-radius: 10px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      max-width: 900px;
      width: 100%;
    }

    .login-image {
      flex: 1;
      background-color: #eee;
    }

    .login-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .login-form {
      flex: 1;
      padding: 50px 40px;
    }

    .login-form h2 {
      margin-bottom: 30px;
      color: #333;
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      display: block;
      margin-bottom: 6px;
      font-weight: 600;
    }

    .form-group input {
      width: 100%;
      padding: 12px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    .forgot-password {
      text-align: right;
      margin-top: 5px;
      margin-bottom: 10px;
    }

    .forgot-password a {
      color: #c5a40a;
      font-size: 14px;
      text-decoration: none;
    }

    .remember-me {
      margin-bottom: 20px;
    }

    .login-button {
      background: #403404;
      color: white;
      border: none;
      padding: 12px;
      width: 100%;
      border-radius: 5px;
      cursor: pointer;
      font-weight: bold;
    }

    .or-line {
      margin: 20px 0;
      text-align: center;
      font-size: 14px;
      color: #666;
    }

    .google-btn {
      background: white;
      border: 1px solid #ccc;
      padding: 10px;
      border-radius: 5px;
      width: 100%;
      cursor: pointer;
      display: flex;
      justify-content: center;
      align-items: center;
      font-weight: 600;
    }

    .footer-logo {
      text-align: center;
      margin-top: 20px;
      color: #222;
      font-weight: bold;
    }





    .password-box {
      position: relative;
    }

    .password-box input {
      padding-right: 40px;
    }

    .password-box i {
      position: absolute;
      top: 50%;
      right: 12px;
      transform: translateY(-50%);
      cursor: pointer;
      color: #777;
    }
    .password-box i:hover {
      color: #000;
    }

    .forgot-password {
      text-align: right;
      margin-top: 5px;
      margin-bottom: 10px;
    }

    .forgot-password a {
      color: #c5a40a;
      font-size: 14px;
      text-decoration: none;
    }
    
    .remember-me {
      margin-bottom: 20px;
    }

    .login-button {
      background: #403404;
      color: white;
      border: none;
      padding: 12px;
      width: 100%;
      border-radius: 5px;
      cursor: pointer;
      font-weight: bold;
    }

    .or-line {
      margin: 20px 0;
      text-align: center;
      font-size: 14px;
      color: #666;
    }
    
    .google-btn {
      background: white;
      border: 1px solid #ccc;
      padding: 10px;
      border-radius: 5px;
      width: 100%;
      cursor: pointer;
      display: flex;
      justify-content: center;
      align-items: center;
      font-weight: 600;
      text-decoration: none;
      color: #000;
    }

    .footer-logo {
      text-align: center;
      margin-top: 20px;
      color: #222;
      font-weight: bold;
    }

    .signup-link {
      text-align: center;
      margin-top: 10px;
      font-size: 14px;
    }

    .signup-link a {
      color: #c5a40a;
      text-decoration: none;
    }

  </style>
</head>

<body>
  <div class="login-container">
    <div class="login-box">
      <div class="login-image">
        <img src="/images/9d1ac8e1-a5c9-4455-9736-10180866e2fe.jpeg">
      </div>
      <div class="login-form">
        <h2>Welcome Back!</h2>
        <form action="/login" method="POST" novalidate>
          <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" name="email" placeholder="Enter your Email" required />
          </div>
          <!-- <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" placeholder="Enter your Password" required />
            <div class="forgot-password">
              <a href="/forgot-password">forgot password?</a>
            </div>
          </div> -->

          <div class="form-group">
  <label for="password">Password</label>

  <div class="password-box">
    <input
      type="password"
      id="password"
      name="password"
      placeholder="Enter your Password"
      required
    />
    <i class="fa-solid fa-eye" id="togglePassword"></i>
  </div>

  <div class="forgot-password">
    <a href="/forgot-password">forgot password?</a>
  </div>
</div>


          <div id="error2" class="error-message"></div>
          <% if (locals.message && locals.message.length> 0) { %>
            <div class="alert alert-danger text-center">
              <%= locals.message %>
            </div>
            <% } %>
              <div class="remember-me">
                <input type="checkbox" name="remember" /> Remember for 30 days
              </div>
              <button type="submit" class="login-button">Login</button>
        </form>
        <div class="signup-link">
                     Don't have an account? <a href="/signup">Sign Up</a>
        <div class="or-line">OR</div>
        <a href="/auth/google" class="google-btn">
          <img src="https://img.icons8.com/color/16/000000/google-logo.png" style="margin-right: 10px;" />
          Sign in with Google
      </a>

        <div class="footer-logo">QUORA</div>
      </div>
    </div>
  </div>

    <script>
    const togglePassword = document.getElementById("togglePassword");
    const passwordInput = document.getElementById("password");

    togglePassword.addEventListener("click", () => {
      const type =
        passwordInput.type === "password" ? "text" : "password";
      passwordInput.type = type;

      togglePassword.classList.toggle("fa-eye");
      togglePassword.classList.toggle("fa-eye-slash");
    });
  </script>
</body>
</html>