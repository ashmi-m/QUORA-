<%- include('../partials/user/header') %>

<head>
  <link rel="stylesheet" href="../../css/home.css">
  <title>Home - Quora</title>

  <style>
    .products {
      text-align: center;   
    }

   
    .product-grid {
      /* display: flex; */
      flex-wrap: wrap;
      gap: 20px;
      margin-top: 20px;
      justify-content: center;
    }

    .product-card {
        position: relative;
      border: 1px solid #ddd;
      border-radius: 10px;
      padding: 15px;
      width: 220px;
      background: #fff;
      text-align: center;
    }
    
    .wishlist-icon {
      position: absolute;
      top: 10px;
      right: 10px;
      font-size: 22px;
      cursor: pointer;
      color: #ccc;
      transition: 0.3s;
      z-index: 10;
    }
    
    .wishlist-icon.active {
      color: red;
    }

    .product-card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
      border-radius: 6px;
    }

    .product-card h4 {
      font-size: 16px;
      margin: 10px 0;
    }

    .product-card p {
      font-weight: bold;
      color: #333;
      margin: 5px 0;
    }

    .btn-view-details,
    .btn-see-more {
      background: #4f46e5;
      color: #fff;
      padding: 8px 12px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      margin-top: 5px;
    }

    .btn-view-details:hover,
    .btn-see-more:hover {
      background: #3730a3;
    }

   
    .offers-section {
      width: 100%;
      background-color: #fff;
      display: flex;
      justify-content: center;
      padding: 40px 20px;
    }

    .offers-container {
      background-image: url('/images/Flowers brushes cosmetics highlighter Candle Mac.jpeg'); /* Ensure path is correct */
      background-size: cover;
      background-position: center;
      width: 100%;
      max-width: 1200px;
      border-radius: 20px;
      padding: 140px 60px;
      color: #a15e3f;
      text-align: left;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .offers-container h2 {
      font-size: 36px;
      font-weight: bold;
      margin-bottom: 10px;
    }

    .offers-container p {
      font-size: 18px;
      margin-bottom: 20px;
      color: rgba(255, 255, 255, 0.9);
    }

    .offers-container .explore-btn {
      background-color: #a15e3f;
      color: white;
      padding: 12px 24px;
      font-weight: bold;
      border-radius: 10px;
      text-decoration: none;
      display: inline-block;
      width: fit-content;
      transition: background-color 0.3s ease;
    }
    .cart-icon {
  position: absolute;
  top: 10px;
  left: 10px;
  font-size: 20px;
  cursor: pointer;
  color: #555;
  transition: 0.3s;
  z-index: 10;
}

.cart-icon:hover {
  color: #4f46e5;
}


    .offers-container .explore-btn:hover {
      background-color: #8a4b2f;
    }

    @media (max-width: 768px) {
      .offers-container {
        padding: 40px 20px;
        text-align: center;
      }

      .offers-container h2 {
        font-size: 28px;
      }

      .offers-container p {
        font-size: 16px;
      }
    }
  </style>
</head>

<body>
  <section class="hero">
    <div class="hero-left">
      <img src="../../images/image 3.png" alt="Perfume collection">
      <div class="hero-overlay"></div>
      <div class="hero-text">
        <h2>Perfume collection</h2>
        <p>Vibrant experiences within curated products, experienced for you</p>
      </div>
    </div>

    <div class="hero-right">
      <div class="right-bottom">
        <div class="banner">
          <img src="../../images/lipsick 2.jpeg" alt="Skincare">
          <span>Skincare routine</span>
        </div>
        <div class="banner">
          <img src="../../images/bodyloation.jpeg" alt="Eye makeup">
          <span>Eye makeup</span>
        </div>
      </div>

      <div class="right-bottom">
        <div class="banner">
          <img src="../../images/nailpolish 1.jpeg" alt="Skincare">
          <span>Skincare routine</span>
        </div>
        <div class="banner">
          <img src="../../images/eye1.jpeg" alt="Eye makeup">
          <span>Eye makeup</span>
        </div>
      </div>
    </div>
  </section>

 
  <section class="products">
    <h2>NEW PRODUCT</h2>
    <div class="product-grid">
      <% if (products && products.length > 0) { %>
        <% products.forEach(product => { %>
          <div class="product-card">
             <span
              class="wishlist-icon <%= wishlistIds && wishlistIds.includes(product._id.toString()) ? 'active' : '' %>"
              data-id="<%= product._id %>">
              ❤
            </span>
            <a href="/product/<%= product._id %>" class="product-link">
           
  
            <img src="<%= product.productImage && product.productImage.length > 0 ? product.productImage[0] : '/images/default.png' %>" alt="<%= product.productName %>">
            <h4><%= product.productName %></h4>
            </a>
            <p>₹<%= product.salePrice || product.regularPrice %></p>

           <button class="btn-add-cart" data-id="<%= product._id %>">
  <i class="fa fa-shopping-cart"></i> Add to Cart
</button>

          </div>
        <% }) %>
      <% } else { %>
        <p>No products available</p>
      <% } %>
    </div>
    <a href="/shop"><button class="btn-see-more">SEE MORE</button></a>
  </section>

 
  <section class="offers-section">
    <div class="offers-container">
      <h2>GREAT OFFERS</h2>
      <p>Explore the deals and offers</p>
      <a href="/offers" class="explore-btn">EXPLORE</a>
    </div>
  </section>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

   <script>
    document.addEventListener("DOMContentLoaded", () => {

      document.querySelectorAll(".wishlist-icon").forEach(icon => {
        icon.addEventListener("click", async () => {

          const productId = icon.dataset.id;
          const isActive = icon.classList.contains("active");

          try {
            const res = await fetch(
              isActive ? "/wishlist/remove" : "/wishlist/add",
              {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ productId })
              }
            );

            const data = await res.json();

            if (data.success || data.added) {
              icon.classList.toggle("active");

              Swal.fire({
                icon: "success",
                title: isActive
                  ? "Removed from Wishlist"
                  : "Added to Wishlist",
                timer: 1000,
                showConfirmButton: false
              });
            }

          } catch (err) {
            Swal.fire("Login Required", "Please login to use wishlist", "warning");
          }
        });
      });

    });

const MAX_QTY = 5; 
  document.querySelectorAll(".btn-add-cart").forEach(btn => {
    btn.addEventListener("click", async () => {
      const productId = btn.dataset.id;

      try {
        const res = await fetch("/cart/add", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ productId })
        });

        const data = await res.json();

        if (data.success) {
          Swal.fire({
            icon: "success",
            title: data.message,
            timer: 1000,
            showConfirmButton: false
          });

          const badge = document.querySelector('a[href="/cart"] .badge');
          if (badge) badge.textContent = parseInt(badge.textContent || "0") + 1;
 } else {
          Swal.fire({
            icon: "warning",
            title: data.message,
            timer: 1500,
            showConfirmButton: false
          });
        }

      } catch {
        Swal.fire({
          icon: "error",
          title: "Login Required",
          text: "Please login to add products to cart",
        });
      }
    });
  });




</script>
 
  <%- include('../partials/user/footer') %>

</body>







