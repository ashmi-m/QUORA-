<body>

<div class="breadcrumb">
  <span>Home > Products</span>
  <div class="sort">
    <form action="/shop" method="GET" id="filterForm">
      <% if (searchQuery) { %>
        <input type="hidden" name="search" value="<%= searchQuery %>">
      <% } %>

      <% selectedCategory.forEach(id => { %>
        <input type="hidden" name="category[]" value="<%= id %>">
      <% }) %>

      <% selectedBrand.forEach(id => { %>
        <input type="hidden" name="brand[]" value="<%= id %>">
      <% }) %>

      <% if (priceRange) { %>
        <input type="hidden" name="priceRange" value="<%= priceRange %>">
      <% } %>

      <label>Sort:</label>
      <select name="sort" onchange="this.form.submit()">
        <option value="">Default</option>
        <option value="low-high" <%= sortOption==='low-high'?'selected':'' %>>Low → High</option>
        <option value="high-low" <%= sortOption==='high-low'?'selected':'' %>>High → Low</option>
        <option value="a-z" <%= sortOption==='a-z'?'selected':'' %>>A → Z</option>
        <option value="z-a" <%= sortOption==='z-a'?'selected':'' %>>Z → A</option>
      </select>
    </form>
  </div>
</div>

<div class="container">
  <aside class="sidebar">
    <form id="filterForm" action="/shop" method="GET">
      <h3>Search</h3>
      <div class="search-bar">
        <input type="text" name="search" value="<%= searchQuery || '' %>" placeholder="Search products">
        <% if (searchQuery) { %>
          <a href="/shop" class="clear-search">✕</a>
        <% } %>
        <button type="submit">Search</button>
      </div>

      <% if (sortOption) { %>
        <input type="hidden" name="sort" value="<%= sortOption %>">
      <% } %>

      <h3>Categories</h3>
      <ul>
        <% categories.forEach(cat => { %>
          <li>
            <label>
              <input type="checkbox" name="category" value="<%= cat._id %>" onchange="this.form.submit()"
                <%= selectedCategory.includes(cat._id.toString()) ? 'checked' : '' %>>
              <%= cat.name %>
            </label>
          </li>
        <% }) %>
      </ul>

      <h3>Brands</h3>
      <ul>
        <% brands.forEach(b => { %>
          <li>
            <label>
              <input type="checkbox" name="brand" value="<%= b._id %>" onchange="this.form.submit()"
                <%= selectedBrand.includes(b._id.toString()) ? 'checked' : '' %>>
              <%= b.brandName %>
            </label>
          </li>
        <% }) %>
      </ul>

      <h3>Filter by Price</h3>
      <ul>
        <li><label><input type="radio" name="priceRange" value="" onchange="this.form.submit()" <%= !priceRange ? 'checked' : '' %>> All</label></li>
        <li><label><input type="radio" name="priceRange" value="under500" onchange="this.form.submit()" <%= priceRange==='under500' ? 'checked' : '' %>> Under ₹500</label></li>
        <li><label><input type="radio" name="priceRange" value="500-1000" onchange="this.form.submit()" <%= priceRange==='500-1000' ? 'checked' : '' %>> ₹500 - ₹1000</label></li>
        <li><label><input type="radio" name="priceRange" value="1000-5000" onchange="this.form.submit()" <%= priceRange==='1000-5000' ? 'checked' : '' %>> ₹1000 - ₹5000</label></li>
        <li><label><input type="radio" name="priceRange" value="5000-15000" onchange="this.form.submit()" <%= priceRange==='5000-15000' ? 'checked' : '' %>> ₹5000 - ₹15000</label></li>
        <li><label><input type="radio" name="priceRange" value="above15000" onchange="this.form.submit()" <%= priceRange==='above15000' ? 'checked' : '' %>> Above ₹15000</label></li>
      </ul>
    </form>
  </aside>

  <section class="products">
    <% products.forEach(product => { %>
      <div class="product-card">
        <a href="/product/<%= product._id %>">
          <img src="<%= product.productImage?.[0] || '/images/default.jpg' %>">
          <p><%= product.productName %></p>
          <span>₹<%= product.regularPrice %></span>
        </a>

<button class="add-to-cart-btn" data-id="<%= product._id %>">
  Add to Cart
</button>
   <div class="wishlist-overlay" data-id="<%= product._id %>">
      ❤
    </div>

      </div>
    <% }) %>
  </section>
</div>

<div class="pagination">
  <% const buildQuery = (page) => { %>
    <% let q = `?page=${page}`; %>
    <% selectedCategory.forEach(id => { q += `&category[]=${id}` }) %>
    <% selectedBrand.forEach(id => { q += `&brand[]=${id}` }) %>
    <% if (priceRange) q += `&priceRange=${priceRange}` %>
    <% if (sortOption) q += `&sort=${sortOption}` %>
    <% if (searchQuery) q += `&search=${searchQuery}` %>
    <%= q %>
  <% } %>

  <% if (currentPage > 1) { %>
    <a class="page-btn" href="<%= buildQuery(currentPage - 1) %>">Prev</a>
  <% } %>

  <% for (let i = 1; i <= totalPages; i++) { %>
    <a class="page-btn <%= currentPage === i ? 'active' : '' %>" href="<%= buildQuery(i) %>"><%= i %></a>
  <% } %>

  <% if (currentPage < totalPages) { %>
    <a class="page-btn" href="<%= buildQuery(currentPage + 1) %>">Next</a>
  <% } %>
</div>

<footer>
  <div class="footer-container">
