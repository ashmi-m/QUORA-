      <section class="products">
  <% if (products.length > 0) { %>
    <% products.forEach(function(product) { %>
      <div class="product-card">
        <a href="/product/<%= product._id %>">
          <img src="<%= product.productImage && product.productImage[0] ? product.productImage[0] : '/images/default.jpg' %>">
          <p><%= product.productName %></p>
          <span>₹<%= product.regularPrice %></span>
        </a>
      </div>
    <% }) %>
  <% } else { %>
    <p>No products found</p>
  <% } %>
</section>

</div>

<div class="pagination">

  <% const buildQuery = (page) => { %>
    <% let q = `?page=${page}`; %>

    <% selectedCategory.forEach(id => { q += `&category[]=${id}` }) %>
    <% selectedBrand.forEach(id => { q += `&brand[]=${id}` }) %>

    <% if (priceRange) q += `&priceRange=${priceRange}` %>
    <% if (sortOption) q += `&sort=${sortOption}` %>
    <% if (searchQuery) q += `&search=${searchQuery}` %>

    <%= q %>
  <% } %>

  <% if (currentPage > 1) { %>
    <a class="page-btn" href="<%= buildQuery(currentPage - 1) %>">Prev</a>
  <% } %>

  <% for (let i = 1; i <= totalPages; i++) { %>
    <a class="page-btn <%= currentPage === i ? 'active' : '' %>"
       href="<%= buildQuery(i) %>">
      <%= i %>
    </a>
  <% } %>

  <% if (currentPage < totalPages) { %>
    <a class="page-btn" href="<%= buildQuery(currentPage + 1) %>">Next</a>
  <% } %>

</div>

   



