           <h3>Categories</h3>
    <ul>
      <% categories.forEach(cat => { %>
        <li>
          <label>
            <input
              type="checkbox"
              name="category"
              value="<%= cat._id %>"
              onchange="this.form.submit()"
              <%= selectedCategory.includes(cat._id.toString()) ? 'checked' : '' %>
            >
            <%= cat.name %>
