          <h3>Brands</h3>
    <ul>
      <% brands.forEach(b => { %>
        <li>
          <label>
            <input
              type="checkbox"
              name="brand"
              value="<%= b._id %>"
              onchange="this.form.submit()"
              <%= selectedBrand.includes(b._id.toString()) ? 'checked' : '' %>
            >
