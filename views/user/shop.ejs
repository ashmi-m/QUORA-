            <label>
              <input type="radio" name="priceRange" value="5000-15000" onchange="this.form.submit()"
                <%=priceRange==='5000-15000' ? 'checked' : '' %>> ₹5000 - ₹15000
            </label>
            </li>
            <li><label><input type="radio" name="priceRange" value="above15000" onchange="this.form.submit()"
                  <%=priceRange==='above15000' ?'checked':'' %>> Above ₹15000</label></li>
