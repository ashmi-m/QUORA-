<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Details | Quora Admin</title>
  <link rel="stylesheet" href="/css/orderDetails.css">
</head>
<body>

  <!-- Topbar -->
  <header class="topbar">
    <div class="logo">QUORA</div>
    <div class="profile">
      <img src="https://i.pravatar.cc/40" alt="Admin">
    </div>
  </header>

  <div class="layout">

    <!-- Sidebar -->
    <aside class="sidebar">
      <ul>
        <li>Dashboard</li>
        <li class="active">Order</li>
        <li>Products</li>
        <li>Sales report</li>
        <li>Customer</li>
        <li>Coupon</li>
        <li>Category</li>
        <li>Banner</li>
        <li>Refund/Return</li>
        <li>Sign Out</li>
      </ul>
    </aside>

    <!-- Main content -->
    <main class="content">
      <h2>Edit Orders Status</h2>

      <div class="order-wrapper">

        <!-- Product Details -->
        <div class="product-details">
          <% order.products.forEach(product => { %>
          <div class="product-card">
            <% if (product.productId) { %>
              <img src="/images/<%= product.productId.image[0] %>" alt="Product Image">
              <h3><%= product.productId.name %></h3>
              <p>Quantity : <%= product.quantity %></p>
              <p>₹<%= product.price %></p>
            <% } else { %>
              <p>Product unavailable</p>
            <% } %>
          </div>
          <% }) %>

          <!-- Status Buttons -->
          <div class="status-buttons">
            <form method="POST" action="/admin/orders/<%= order._id %>/status">
              <button type="submit" name="status" value="On Delivery" class="btn on-delivery">On Delivery</button>
              <button type="submit" name="status" value="Delivered" class="btn delivered">Delivered</button>
              <button type="submit" name="status" value="Returned" class="btn returned">Returned</button>
            </form>
          </div>
        </div>

        <!-- Sidebar Details -->
        <div class="order-sidebar">
          <div class="card">
            <h4>Shipping Details</h4>
            <p><%= order.userId.name %></p>
            <p><%= order.address?.street || '' %></p>
            <p><%= order.address?.city || '' %>, <%= order.address?.state || '' %> - <%= order.address?.pincode || '' %></p>
          </div>

          <div class="card">
            <h4>Price Details</h4>
            <p>Price (<%= order.products.length %> items): ₹<%= order.totalPrice %></p>
            <p>Delivery Charges: <%= order.deliveryCharges === 0 ? 'FREE' : '₹' + order.deliveryCharges %></p>
            <p>Platform Fee: ₹<%= order.platformFee %></p>
            <p>Delivery Tip: ₹<%= order.tip || 0 %></p>
          </div>
        </div>

      </div>
    </main>

  </div>

</body>
</html>
