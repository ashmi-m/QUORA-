<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Order Details | Quora Admin</title>
  <link rel="stylesheet" href="/css/admin-OrderDetails.css" />
</head>
<body>
<header class="topbar">
  <div class="logo">QUORA</div>
  <div class="profile">
  </div>
</header>

<div class="layout">
  <aside class="sidebar">
    <ul>
      <li>Dashboard</li>
      <li class="active">Order</li>
      <li>Products</li>
      <li>Sales report</li>
      <li>Customer</li>
      <li>Coupon</li>
      <li>Category</li>
      <li>Banner</li>
      <li>Refund/Return</li>
      <li>Sign Out</li>
    </ul>
  </aside>
  <main class="content">
    <h2>Edit Orders Status</h2>

    <div class="order-wrapper">
      <div class="product-section">

        <% if (order.products && order.products.length) { %>
          <% order.products.forEach(product => { %>

            <% if (product.productId && product.productId.productImage?.length) { %>
              <div class="product-card">

                <img
                  src="<%= product.productId.productImage[0] %>"
                  alt="Product"
                />

                <div class="product-info">
                  <h3><%= product.productId.name %></h3>
                  <p>Quantity: <%= product.quantity %></p>
                  <strong>₹ <%= product.price %></strong>
                </div>
              </div>
            <% } else { %>
              <p>No product image</p>
            <% } %>

          <% }) %>
        <% } else { %>
          <p>No products found</p>
        <% } %>
        <form
          class="status-buttons"
          method="POST"
          action="/admin/orders/<%= order._id %>/status"
        >
          <button class="btn on-delivery" name="status" value="On Delivery">
            On Delivery
          </button>
          <button class="btn delivered" name="status" value="Delivered">
            Delivered
          </button>
          <button class="btn returned" name="status" value="Returned">
            Returned
          </button>
        </form>

      </div>
      <div class="info-section">

        <div class="info-card">
          <h4>Shipping Details</h4>
          <p><strong><%= order.userId?.name || "N/A" %></strong></p>
          <p>
            <%= order.address?.street || "" %>,
            <%= order.address?.city || "" %><br />
            <%= order.address?.state || "" %> -
            <%= order.address?.pincode || "" %>
          </p>
        </div>

        <div class="info-card">
          <h4>Price Details</h4>

          <div class="price-row">
            <span>Price (<%= order.products.length %> items)</span>
            <span>₹ <%= order.totalPrice %></span>
          </div>

          <div class="price-row">
            <span>Delivery Charges</span>
            <span>
              <%= order.deliveryCharges === 0 ? "FREE" : "₹ " + order.deliveryCharges %>
            </span>
          </div>

          <div class="price-row">
            <span>Platform Fee</span>
            <span>₹ <%= order.platformFee %></span>
          </div>

          <div class="price-row">
            <span>Delivery Tip</span>
            <span>₹ <%= order.tip || 0 %></span>
          </div>

        </div>
      </div>

    </div>
  </main>
</div>

</body>
</html>
