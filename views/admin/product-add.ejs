<%- include("../../views/partials/admin/header") %>

    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/cropperjs/dist/cropper.min.css">
        <script src="https://cdn.jsdelivr.net/npm/cropperjs/dist/cropper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <title>Add New Product</title>
        <style>
            .error-message {
                color: red;
                font-size: 12px;
                margin-top: 5px;
            }

            .success-message {
                color: green;
                font-size: 14px;
                margin-bottom: 15px;
            }

            .thumbnails-container {
                display: flex;
                overflow-x: auto;
                gap: 10px;
                padding: 10px;
                background: #f8f9fa;
                border-radius: 8px;
            }

            .thumbnail {
                width: 80px;
                height: 80px;
                object-fit: cover;
                border-radius: 6px;
                border: 2px solid #ddd;
                cursor: pointer;
            }

            .image-preview {
                max-width: 100%;
                max-height: 200px;
                object-fit: cover;
                border-radius: 8px;
                margin: 10px 0;
                display: none;
            }

            .content-main {
                margin-left: 240px;
                margin-top: 70px;
                padding: 20px;
                background: #f4f6f9;
                min-height: calc(100vh - 70px);
            }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            }

            .btn-primary {
                background-color: #007bff;
                border-color: #007bff;
                padding: 12px 30px;
                font-size: 16px;
            }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

            .card {
                border: none;
                box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
                margin-bottom: 20px;
            }

            .card-header {
                background-color: #f8f9fa;
                border-bottom: 1px solid #dee2e6;
                font-weight: 600;
            }

            .image-upload-section {
                border: 2px dashed #dee2e6;
                border-radius: 8px;
                padding: 20px;
                margin: 10px 0;
                background: #fafafa;
            }

            .required {
                color: red;
            }

            /* Cropper Modal */
            .modal {
                display: none;
                position: fixed;
                z-index: 2000;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.7);
                justify-content: center;
                align-items: center;
            }

            .modal-content {
                background: #fff;
                padding: 20px;
                border-radius: 8px;
                max-width: 90%;
                max-height: 90%;
                overflow: auto;
            }

            .modal-footer {
                display: flex;
                justify-content: flex-end;
                margin-top: 10px;
                gap: 10px;
            }

            @media (max-width: 768px) {
                .content-main {
                    margin-left: 200px;
                    padding: 15px;
                }
            }

            @media (max-width: 576px) {
                .content-main {
                    margin-left: 0;
                    padding: 10px;
                }
            }
        </style>
    </head>

    <section class="content-main">
        <div class="row">
            <div class="col-12">
                <div class="content-header">
                    <h2 class="content-title">Add New Product</h2>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <div id="message-container"></div>

                        <form id="productForm" enctype="multipart/form-data" action="/admin/addProduct" method="post">


                            <div class="mb-4">
                                <label for="product_name" class="form-label">Product Name <span
                                        class="required">*</span></label>
                                <input type="text" placeholder="Enter product name" name="productName"
                                    class="form-control" id="product_name" required>
                                <div id="productName-error" class="error-message"></div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label">Brand <span class="required">*</span></label>
                                <select class="form-select" name="brand" id="brand" required>
                                    <option value="">Select Brand</option>
                                    <% if (typeof brand !=='undefined' && brand && brand.length> 0) { %>
                                        <% brand.forEach(b=> { %>
                                            <% if (!b.isBlocked) { %>
                                                <option value="<%= b._id %>">
                                                    <%= b.brandName %>
                                                </option>
                                                <% } %>
                                                    <% }) %>
                                                        <% } %>
                                </select>
                                <div id="brand-error" class="error-message"></div>
                            </div>


                            <div class="card mb-4">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-6 mb-3">
                                            <label class="form-label">Category <span class="required">*</span></label>
                                            <select class="form-select" name="category" id="category" required>
                                                <option value="">Select Category</option>
                                                <% if (typeof cat !=='undefined' && cat && cat.length> 0) { %>
                                                    <% cat.forEach(c=> { %>
                                                        <% if (!c.isBlocked) { %>
                                                            <option value="<%= c._id %>">
                                                                <%= c.name %>
                                                            </option>
                                                            <% } %>
                                                                <% }) %>
                                                                    <% } %>
                                            </select>
                                            <div id="category-error" class="error-message"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="mb-4">
                                <label class="form-label">Full Description <span class="required">*</span></label>
                                <textarea placeholder="Enter detailed product description" name="description"
                                    class="form-control" rows="4" required></textarea>
                                <div id="description-error" class="error-message"></div>
                            </div>

                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">Regular Price <span class="required">*</span></label>
                                        <input placeholder="0.00" name="regularPrice" type="number" class="form-control"
                                            min="0" step="0.01" required>
                                        <div id="regularPrice-error" class="error-message"></div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">Sale Price</label>
                                        <input placeholder="0.00" name="salePrice" type="number" class="form-control"
                                            min="0" step="0.01">
                                        <div id="salePrice-error" class="error-message"></div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">Quantity <span class="required">*</span></label>
                                        <input placeholder="0" name="quantity" type="number" class="form-control"
                                            min="0" required>
                                        <div id="quantity-error" class="error-message"></div>
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">Color</label>
                                        <input name="color" type="text" class="form-control"
                                            placeholder="e.g., Red, Blue, Black">
                                        <div id="color-error" class="error-message"></div>
                                    </div>
                                </div>
                            </div>


                            <div class="card mb-4">
                                <div class="card-header">
                                    <h4>Choose Images</h4>
                                    <small class="text-muted">Upload up to 4 product images. At least one image is
                                        required.</small>
                                </div>
                                <div class="card-body">

                                    <div id="addedImagesContainer" class="thumbnails-container mb-3">
                                        <span class="text-muted">Selected images will appear here</span>
                                    </div>
                                    <div class="row">
                                        <% for (let i=1; i <=4; i++) { %>
                                            <div class="col-md-6 mb-3">
                                                <div class="image-upload-section">
                                                    <label class="form-label">Image <%= i %>
                                                            <% if(i==1){ %><span class="required">*</span>
                                                                <% } %>
                                                    </label>

                                                    <input class="form-control" type="file" name="images"
                                                        id="input<%= i %>"
                                                        accept="image/png, image/jpeg, image/jpg, image/webp"
                                                        onchange="openCropper(event, <%= i %>)" <% if(i==1){ %> required
                                                    <% } %>
                                                        >

                                                        <img id="imgView<%= i %>" class="image-preview"
                                                            alt="Preview <%= i %>">
                                                </div>
                                            </div>
                                            <% } %>
                                    </div>

                                    <div id="images-error" class="error-message"></div>




                                    <div class="mb-4">
                                        <button class="btn btn-primary btn-lg me-3" type="submit" id="submitBtn">
                                            <i class="fa fa-plus me-2"></i>Add Product
                                        </button>
                                        <button class="btn btn-secondary btn-lg" type="button" onclick="resetForm()">
                                            <i class="fa fa-refresh me-2"></i>Reset Form
                                        </button>
                                    </div>

                        </form>
                        <div id="message-container"></div>
                    </div>
                </div>
            </div>


            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Product Preview</h5>
                    </div>
                    <div class="card-body">
                        <div id="productPreview">
                            <p class="text-muted">Fill the form to see live preview</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <div id="cropperModal" class="modal">
        <div class="modal-content">
            <h5>Crop Image</h5>
            <div>
                <img id="cropperImage" style="max-width:100%; max-height:70vh;">
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" onclick="closeCropper()">Cancel</button>
                <button class="btn btn-primary" type="button" onclick="cropImage()">Crop & Save</button>
            </div>
        </div>
    </div>

    <!-- <script src="https://cdn.jsdelivr.net/npm/cropperjs/dist/cropper.min.js"></script> -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.2/cropper.min.js"></script>
    <script>
        let cropper;
        let currentInputIndex;

        function openCropper(event, index) {
            const file = event.target.files[0];
            if (!file) return;

            const validTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/webp'];
            if (!validTypes.includes(file.type)) {
                alert('Please upload a valid image file (JPEG, JPG, PNG, WEBP)');
                event.target.value = '';
                return;
            }

            const reader = new FileReader();
            reader.onload = function (e) {
                const cropperImage = document.getElementById('cropperImage');
                cropperImage.src = e.target.result;
                document.getElementById('cropperModal').style.display = 'flex';
                currentInputIndex = index;
                cropperImage.onload = function () {
                    if (cropper) cropper.destroy();
                    cropper = new Cropper(cropperImage, {
                        aspectRatio: 1,
                        viewMode: 1,
                        autoCropArea: 1,
                        responsive: true,
                        background: false,
                    });
                };
            };

            reader.readAsDataURL(file);


        };


        function closeCropper() {
            document.getElementById('cropperModal').style.display = 'none';
            if (cropper) cropper.destroy();
            cropper = null;
        }

        function cropImage() {
            if (!cropper) return;
            cropper.getCroppedCanvas().toBlob((blob) => {
                const preview = document.getElementById(`imgView${currentInputIndex}`);
                const fileInput = document.getElementById(`input${currentInputIndex}`);
                preview.src = URL.createObjectURL(blob);
                preview.style.display = 'block';


                const file = new File([blob], fileInput.files[0].name, { type: blob.type });
                const dataTransfer = new DataTransfer();
                dataTransfer.items.add(file);
                fileInput.files = dataTransfer.files;


                closeCropper();
            });
        }

        const form = document.getElementById("productForm");
        form.addEventListener("submit",async function (e) {
            e.preventDefault();

            const formData = new FormData(form);
            try{
                const response = await fetch("/admin/addProduct",{
                    method: "Post",
                    body: formData
                });

                const result = await response.json();

                if(result.ok){
                    Swal.fire({
                        icon:"success",
                        title:"Success!",
                        text:result.message,
                        confirmButtonText:"OK"
                    }).then(()=>{
                        form.reset();
                    document.getElementById("productPreview").innerHTML =
                        '<p class="text-muted">Fill the form to see live preview</p>';
                    });

                }else{
                    Swal.fire({
                        icon:"error",
                        title:"Error",
                        text:result.error||"Something Went Wrong"
                    });
                }
            }catch (err){
                console.log("Request failed:",err);
                Swal.fire({
                    icon:"error",
                    title:"Error",
                    text:"Server error,please try again"
                });
            }
        });


    </script>