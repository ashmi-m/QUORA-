<%- include("../../views/partials/admin/header", {active : 'addProduct' }) %>

    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/cropperjs/dist/cropper.min.css">
        <script src="https://cdn.jsdelivr.net/npm/cropperjs/dist/cropper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <title>Add New Product</title>
        <style>
            .error-message {
                color: red;
                font-size: 12px;
                margin-top: 5px;
            }

            .success-message {
                color: green;
                font-size: 14px;
                margin-bottom: 15px;
            }

            .thumbnails-container {
                display: flex;
                overflow-x: auto;
                gap: 10px;
                padding: 10px;
                background: #f8f9fa;
                border-radius: 8px;
            }


            .thumbnail {
                width: 80px;
                height: 80px;
                object-fit: cover;
                border-radius: 6px;
                border: 2px solid #ddd;
                cursor: pointer;
            }

            .image-preview {
                max-width: 100%;
                max-height: 200px;
                object-fit: cover;
                border-radius: 8px;
                margin: 10px 0;
                display: none;
            }

            .content-main {
                margin-left: 240px;
                margin-top: 70px;
                padding: 20px;
                background: #f4f6f9;
                min-height: calc(100vh - 70px);
            }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            }

            .btn-primary {
                background-color: #007bff;
                border-color: #007bff;
                padding: 12px 30px;
                font-size: 16px;
            }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

            .card {
                border: none;
                box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
                margin-bottom: 20px;
            }

            .card-header {
                background-color: #f8f9fa;
                border-bottom: 1px solid #dee2e6;
                font-weight: 600;
            }

            .image-upload-section {
                border: 2px dashed #dee2e6;
                border-radius: 8px;
                padding: 20px;
                margin: 10px 0;
                background: #fafafa;
            }

            .btn-delete {
                background: none;
                border: none;
                color: #ff4d4d;
                font-size: 18px;
                cursor: pointer;
                margin-top: 5px;
                transition: 0.2s ease;
            }

            .btn-delete:hover {
                color: #ff0000;
                transform: scale(1.1);
            }

            .preview-wrapper {
                position: relative;
                display: flex;
                flex-direction: column;
                align-items: start;
            }

            .preview-wrapper img {
                width: 100%;
                height: auto;
                border-radius: 8px;
                margin-top: 10px;
                display: none;
            }


            .required {
                color: red;
            }

            /* Cropper Modal */
            .modal {
                display: none;
                position: fixed;
                z-index: 2000;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.7);
                justify-content: center;
                align-items: center;
            }

            .modal-content {
                background: #fff;
                padding: 20px;
                border-radius: 8px;
                max-width: 90%;
                max-height: 90%;
                overflow: auto;
            }



            .modal-footer {
                display: flex;
                justify-content: flex-end;
                margin-top: 10px;
                gap: 10px;
            }

            @media (max-width: 768px) {
                .content-main {
                    margin-left: 200px;
                    padding: 15px;
                }
            }

            @media (max-width: 576px) {
                .content-main {
                    margin-left: 0;
                    padding: 10px;
                }
            }
        </style>
    </head>

    <section class="content-main">
        <div class="row">
            <div class="col-12">
                <div class="content-header">
                    <h2 class="content-title">Add New Product</h2>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <div id="message-container"></div>

                      
<form id="productForm" enctype="multipart/form-data" novalidate>


                            <div class="mb-4">
                                <label for="product_name" class="form-label">Product Name <span
                                        class="required">*</span></label>
                                <input type="text" placeholder="Enter product name" name="productName"
                                    class="form-control" id="product_name" required>
                                <div id="productName-error" class="error-message"></div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label">Brand <span class="required">*</span></label>
                                <select class="form-select" name="brand" id="brand" required>
                                    <option value="">Select Brand</option>
                                    <% if (typeof brand !=='undefined' && brand && brand.length> 0) { %>
                                        <% brand.forEach(b=> { %>
                                            <% if (!b.isBlocked) { %>
                                                <option value="<%= b._id %>">
                                                    <%= b.brandName %>
                                                </option>
                                                <% } %>
                                                    <% }) %>
                                                        <% } %>
                                </select>
                                <div id="brand-error" class="error-message"></div>
                            </div>


                            <div class="card mb-4">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-6 mb-3">
                                            <label class="form-label">Category <span class="required">*</span></label>
                                            <select class="form-select" name="category" id="category" required>
                                                <option value="">Select Category</option>
                                                <% if (typeof cat !=='undefined' && cat && cat.length> 0) { %>
                                                    <% cat.forEach(c=> { %>
                                                        <% if (!c.isBlocked) { %>
                                                            <option value="<%= c._id %>">
                                                                <%= c.name %>
                                                            </option>
                                                            <% } %>
                                                                <% }) %>
                                                                    <% } %>
                                            </select>
                                            <div id="category-error" class="error-message"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="mb-4">
                                <label class="form-label">Full Description <span class="required">*</span></label>
                                <textarea placeholder="Enter detailed product description" name="description"
                                    class="form-control" rows="4" required></textarea>
                                <div id="description-error" class="error-message"></div>
                            </div>

                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">Regular Price <span class="required">*</span></label>
                                        <input placeholder="0.00" name="regularPrice" type="number" class="form-control"
                                            min="0" step="0.01" required>
                                        <div id="regularPrice-error" class="error-message"></div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                  
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">Quantity <span class="required">*</span></label>
                                        <input placeholder="0" name="quantity" type="number" class="form-control"
                                            min="0" required>
                                        <div id="quantity-error" class="error-message"></div>
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">Color</label>
                                        <input name="color" type="text" class="form-control"
                                            placeholder="e.g., Red, Blue, Black">
                                        <div id="color-error" class="error-message"></div>
                                    </div>
                                </div>
                            </div>


                            <div class="card mb-4">
                                <div class="card-header">
                                    <h4>Choose Images</h4>
                                    <small class="text-muted">Upload up to 4 product images. At least one image is
                                        required.</small>
                                </div>
                                <div class="card-body">

                                    <div id="addedImagesContainer" class="thumbnails-container mb-3">
                                        <span class="text-muted">Selected images will appear here</span>
                                    </div>
                                    <div class="row">
                                        <% for (let i=1; i <=4; i++) { %>
                                            <div class="col-md-6 mb-3">
                                                <div class="image-upload-section">
                                                    <label class="form-label">Image <%= i %>
                                                            <% if(i==1){ %><span class="required">*</span>
                                                                <% } %>
                                                    </label>

                                                    <input class="form-control" type="file" name="images"
                                                        id="input<%= i %>"
                                                        accept="image/png, image/jpeg, image/jpg, image/webp"
                                                        onchange="openCropper(event, <%= i %>)" <% if(i==1){ %> required
                                                    <% } %>
                                                        >

                                                        <!-- <img id="imgView<%= i %>" class="image-preview"
                                                            alt="Preview <%= i %>"> -->

                                                        <div class="preview-wrapper" id="previewWrapper<%= i %>">
                                                            <img id="imgView<%= i %>" class="image-preview"
                                                                alt="Preview <%= i %>">
                                                            <button type="button" class="btn-delete"
                                                                onclick="removeImage(<% i %>)" 
                                                                title="Remove Image">‚ùå</button>
                                                        </div>

                                                </div>
                                            </div>
                                            <% } %>
                                    </div>

                                    <div id="images-error" class="error-message"></div>




                                    <div class="mb-4">
                                        <button class="btn btn-primary btn-lg me-3" type="submit" id="submitBtn">
                                            <i class="fa fa-plus me-2"></i>Add Product
                                        </button>
                                        <button class="btn btn-secondary btn-lg" type="button" onclick="resetForm()">
                                            <i class="fa fa-refresh me-2"></i>Reset Form
                                        </button>
                                    </div>

                        </form>
                        <div id="message-container"></div>



                        <div class="col-lg-4">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Product Preview</h5>
                                </div>
                                <div class="card-body">
                                    <div id="productPreview">
                                        <p class="text-muted">Fill the form to see live preview</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
    </section>


    <div id="cropperModal" class="modal">
        <div class="modal-content">
            <h5>Crop Image</h5>
            <div>
                <img id="cropperImage" style="max-width:100%; max-height:70vh;">
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" onclick="closeCropper()">Cancel</button>
                <button class="btn btn-primary" type="button" onclick="cropImage()">Crop & Save</button>
            </div>
        </div>
    </div>

    <!-- <script src="https://cdn.jsdelivr.net/npm/cropperjs/dist/cropper.min.js"></script> -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.2/cropper.min.js"></script>
    <script>

const croppedImages = {};
let cropper = null;
let currentIndex = null;

function showError(id, msg) {
  document.getElementById(id).innerText = msg;
}

function clearErrors() {
  document.querySelectorAll('.error-message').forEach(e => e.innerText = '');
}


function validateForm() {
  clearErrors();
  let valid = true;

  const name = document.getElementById('product_name').value.trim();
  const brand = document.getElementById('brand').value;
  const category = document.getElementById('category').value;
  const desc = document.querySelector('[name=description]').value.trim();
  const price = document.querySelector('[name=regularPrice]').value;
  const qty = document.querySelector('[name=quantity]').value;

  if (name.length < 3) {
    showError('productName-error', 'Product name must be at least 3 characters');
    valid = false;
  }

  if (!brand) {
    showError('brand-error', 'Please select a brand');
    valid = false;
  }

  if (!category) {
    showError('category-error', 'Please select a category');
    valid = false;
  }

  if (desc.length < 10) {
    showError('description-error', 'Description must be at least 10 characters');
    valid = false;
  }

  if (!price || price <= 0) {
    showError('regularPrice-error', 'Enter a valid price');
    valid = false;
  }

  if (qty < 0) {
    showError('quantity-error', 'Quantity cannot be negative');
    valid = false;
  }

  if (Object.keys(croppedImages).length === 0) {
    showError('images-error', 'At least one image is required');
    valid = false;
  }

  return valid;
}


function openCropper(event, index) {
  currentIndex = index;

  if (cropper) {
    cropper.destroy();
    cropper = null;
  }

  const reader = new FileReader();
  reader.onload = e => {
    cropperImage.src = e.target.result;
    cropperModal.style.display = 'flex';
    cropper = new Cropper(cropperImage, { aspectRatio: 1 });
  };
  reader.readAsDataURL(event.target.files[0]);
}

function cropImage() {
  cropper.getCroppedCanvas().toBlob(blob => {
    croppedImages[currentIndex] = blob;

    const img = document.getElementById(`imgView${currentIndex}`);
    img.src = URL.createObjectURL(blob);
    img.style.display = 'block';

    closeCropper();
  }, 'image/jpeg');
}

function closeCropper() {
  if (cropper) {
    cropper.destroy();
    cropper = null;
  }
  cropperModal.style.display = 'none';
}


document.getElementById('productForm').addEventListener('submit', async e => {
  e.preventDefault();
  if (!validateForm()) return;

  const formData = new FormData();

  
  formData.append('productName', document.getElementById('product_name').value);
  formData.append('brand', document.getElementById('brand').value);
  formData.append('category', document.getElementById('category').value);
  formData.append('description', document.querySelector('[name=description]').value);
  formData.append('regularPrice', document.querySelector('[name=regularPrice]').value);
  formData.append('quantity', document.querySelector('[name=quantity]').value);
  formData.append('color', document.querySelector('[name=color]').value);

  
  Object.keys(croppedImages).forEach(index => {
    formData.append('images', croppedImages[index], `image${index}.jpg`);
  });

  try {
    const res = await fetch('/admin/addProduct', {
      method: 'POST',
      body: formData
    });

    const data = await res.json();

    if (data.ok) {
      Swal.fire('Success', data.message, 'success').then(() => {
        resetProductForm();
      });
    } else {
      Swal.fire('Error', data.error, 'error');
    }
  } catch (err) {
    Swal.fire('Error', 'Server error', 'error');
  }
});


function resetProductForm() {
  
  document.getElementById('productForm').reset();

  Object.keys(croppedImages).forEach(k => delete croppedImages[k]);
  for (let i = 1; i <= 4; i++) {
    const input = document.getElementById(`input${i}`);
    if (input) input.value = "";
  }
  document.querySelectorAll('.image-preview').forEach(img => {
    img.src = "";
    img.style.display = "none";
  });

  const container = document.getElementById('addedImagesContainer');
  if (container) {
    container.innerHTML = `<span class="text-muted">Selected images will appear here</span>`;
  }

  clearErrors();
}

</script>
